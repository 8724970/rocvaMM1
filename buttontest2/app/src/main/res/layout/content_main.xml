<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.krijn.buttontest2.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mastermind"
        android:id="@+id/textView"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="raadA"
        android:id="@+id/raadA"
        android:textColor="#fff"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="raadB"
        android:id="@+id/raadB"
        android:textColor="#fff"
        android:layout_alignTop="@+id/raadA"
        android:layout_toRightOf="@+id/raadA"
        android:layout_toEndOf="@+id/raadA" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="raadC"
        android:id="@+id/raadC"
        android:textColor="#fff"
        android:layout_alignTop="@+id/raadA"
        android:layout_toRightOf="@+id/raadB"
        android:layout_toEndOf="@+id/raadB" />



    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="A1"
        android:id="@+id/round_A1"
        android:textColor="#fff"
        android:layout_below="@+id/raadA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="A2"
        android:id="@+id/round_A2"
        android:textColor="#fff"
        android:layout_alignTop="@+id/round_A1"
        android:layout_toRightOf="@+id/round_A1"
        android:layout_toEndOf="@+id/round_A1" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="A3"
        android:id="@+id/round_A3"
        android:textColor="#fff"
        android:layout_alignTop="@+id/round_A1"
        android:layout_toRightOf="@+id/round_A2"
        android:layout_toEndOf="@+id/round_A2" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="A"
        android:id="@+id/square_A"
        android:textColor="#fff"
        android:layout_alignTop="@+id/round_A1"
        android:layout_toRightOf="@+id/round_A3"
        android:layout_toEndOf="@+id/round_A3" />




</RelativeLayout>
